# ============================================
# VideoAnalysis - Configuración de Entorno
# ============================================
# IMPORTANTE: Copiar este archivo como .env y modificar los valores

# ============================================
# BASE DE DATOS
# ============================================
POSTGRES_USER=videoanalysis_db_user
POSTGRES_PASSWORD=CAMBIAR_EN_PRODUCCION_PASSWORD_SEGURO
POSTGRES_DB=videoanalysis_db
DATABASE_URL=postgresql://videoanalysis_db_user:CAMBIAR_EN_PRODUCCION_PASSWORD_SEGURO@db:5432/videoanalysis_db

# ============================================
# AUTENTICACIÓN Y SEGURIDAD
# ============================================
# IMPORTANTE: Generar JWT_SECRET seguro en producción
# Comando: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=GENERAR_TOKEN_SEGURO_DE_64_BYTES
AUTH_ENABLED=true
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================
# SUPER ADMIN INICIAL
# ============================================
# Este usuario se crea automáticamente al iniciar el backend
INITIAL_ADMIN_EMAIL=admin@videoanalysis.com
INITIAL_ADMIN_PASSWORD=CAMBIAR_PASSWORD_SEGURO

# ============================================
# EMAIL Y VERIFICACIÓN
# ============================================
VERIFICATION_EXP_HOURS=24
RESET_EXP_MINUTES=60
APP_URL=http://localhost:3000

# ============================================
# SMTP (Email)
# ============================================
# Dejar vacío para modo desarrollo (solo imprime en consola)
# Configurar para producción con servidor SMTP real
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Resend (preferido). Usa RESEND_API_KEY y un remitente verificado en Resend.
RESEND_API_KEY=
RESEND_FROM=noreply@conexusplay.com

# ============================================
# OPENAI (OPCIONAL)
# ============================================
# Solo si se usa traducción automática
# OPENAI_API_KEY=sk-...
